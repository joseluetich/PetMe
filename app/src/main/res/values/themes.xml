<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PetMe" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/space_black</item>
        <item name="colorPrimaryVariant">@color/space_grey</item>
        <!--<item name="colorOnPrimary">@color/white</item>-->
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_aquamarine</item>
        <item name="colorSecondaryVariant">@color/green_aquamarine_light</item>
        <!--<item name="colorOnSecondary">@color/black</item>-->
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/rubik</item>
        <item name="android:textColor">@color/space_black</item>
        <item name="android:spinnerStyle">@android:style/Widget.DeviceDefault.Spinner</item>
    </style>

    <style name="Theme.App.Toolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@color/full_white</item>
        <item name="icon">@drawable/ic_round_account_button_with_user_inside</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:actionMenuTextAppearance">@font/rubik_bold</item>
        <item name="titleTextAppearance">@style/Theme.App.Toolbar.Title</item>
    </style>

    <style name="Theme.App.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/full_white</item>
    </style>

    <style name="AppTheme.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- línea inferior -->
        <item name="boxStrokeColor">@color/green_aquamarine</item>
        <!-- el hint cuando el campo está vacio y sin foco-->
        <item name="android:textColorHint">@color/space_black</item>
        <!-- el hint cuando se convierte en etiqueta flotante-->
        <item name="hintTextColor">@color/green_aquamarine</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
    </style>

</resources>